generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  name         String?
  role         UserRole  @default(USER)
  tier         UserTier  @default(FREE)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  payments     Payment[]
  projects     Project[]
  themes       Theme[]

  @@map("users")
}

model Payment {
  id        String        @id @default(cuid())
  userId    String        @map("user_id")
  amount    Decimal       @db.Decimal(10, 2)
  currency  String        @default("VND")
  status    PaymentStatus
  bankTxnId String?       @unique @map("bank_txn_id")
  paidAt    DateTime?     @map("paid_at")
  createdAt DateTime      @default(now()) @map("created_at")
  metadata  Json?
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model Theme {
  id            String    @id @default(cuid())
  name          String
  description   String?
  previewUrl    String?   @map("preview_url")
  defaultParams Json      @map("default_params")
  createdBy     String    @map("created_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  projects      Project[]
  creator       User      @relation(fields: [createdBy], references: [id])

  @@map("themes")
}

model Project {
  id       String @id @default(cuid())
  userId   String @map("user_id")
  themeId  String @map("theme_id")
  name     String
  language String @default("vietnamese")

  // Multi-tenancy fields
  customDomain String? @unique @map("custom_domain") // e.g., shopgiay.com
  subdomain    String? @unique // e.g., shopgiay (will be accessed via shopgiay.geekgolfers.com)

  status    ProjectStatus    @default(EDITING)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")
  versions  ProjectVersion[]
  theme     Theme            @relation(fields: [themeId], references: [id])
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([customDomain])
  @@index([subdomain])
  @@map("projects")
}

model ProjectVersion {
  id            String         @id @default(cuid())
  projectId     String         @map("project_id")
  versionNumber Int            @map("version_number")
  snapshot      Json
  createdAt     DateTime       @default(now()) @map("created_at")
  exports       Export[]
  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  params        VersionParam[]

  @@unique([projectId, versionNumber])
  @@map("project_versions")
}

model VersionParam {
  id               String         @id @default(cuid())
  projectVersionId String         @map("project_version_id")
  paramKey         String         @map("param_key")
  paramValue       String         @map("param_value")
  projectVersion   ProjectVersion @relation(fields: [projectVersionId], references: [id], onDelete: Cascade)

  @@index([projectVersionId, paramKey])
  @@map("version_params")
}

model Export {
  id               String         @id @default(cuid())
  projectVersionId String         @map("project_version_id")
  repoUrl          String?        @map("repo_url")
  zipPath          String?        @map("zip_path")
  createdAt        DateTime       @default(now()) @map("created_at")
  projectVersion   ProjectVersion @relation(fields: [projectVersionId], references: [id], onDelete: Cascade)

  @@map("exports")
}

model Lead {
  id        String   @id @default(cuid())
  projectId String?  @map("project_id") // Optional to allow leads from generic sources or track specific project
  name      String
  email     String
  company   String?
  status    String   @default("NEW") // NEW, CONTACTED, CONVERTED
  createdAt DateTime @default(now()) @map("created_at")

  @@map("leads")
}

enum UserRole {
  USER
  ADMIN
}

enum UserTier {
  FREE
  STANDARD
  PRO
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum ProjectStatus {
  EDITING
  ARCHIVED
}

enum BuildStatus {
  PENDING
  BUILDING
  SUCCESS
  FAILED
}
